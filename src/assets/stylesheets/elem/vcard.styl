.vcards
  padding 0 70px 0 270px
  min-height 210px
  background url(../images/vcards.png) left top no-repeat

.vcards-content
  width 356px
  padding-top 22px

.vcards-header
  color #090909
  font-weight 300
  font-size 1.375rem
  margin 0 0 14px

.vcards-summary
  margin 0
  color #2C2C2C
  font-size 0.8125rem
  line-height 1.125rem

.vcards-total
  font-size 1.5rem
  text-align right
  margin-bottom 8px
  padding-top 55px

.vcards-total-price
  color #6708AF
  font-weight 500

.vcards-total-price-currency
  font-variant small-caps
  margin-left 8px

.vcards-total-count
  color #090909
  margin-left 10px
