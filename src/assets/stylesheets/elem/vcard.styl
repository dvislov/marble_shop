.vcards
  padding 0 70px 0 270px
  min-height 210px
  background url(../images/vcards.png) left top no-repeat

.vcards-content
  width 356px
  padding-top 22px

.vcards-header
  color #090909
  font-weight 300
  font-size 1.375rem
  margin 0 0 14px

.vcards-summary
  margin 0
  color #2C2C2C
  font-size 0.8125rem
  line-height 1.125rem

.vcards-total
  font-size 1.5rem
  text-align right
  margin-bottom 8px
  padding-top 55px

.vcards-total-price
  color #6708AF
  font-weight 500

.vcards-total-price-currency
  font-variant small-caps
  margin-left 8px

.vcards-total-count
  color #090909
  margin-left 10px


.vcard-editor
  border-top 1px dotted #cacaca
  .vcards-total
    display inline-block
    padding 0
    margin 0 20px 0 0
    vertical-align top
    position relative
    top 3px
  .btn
    vertical-align top


.vcard-editor-header
  font-weight 300
  color #000
  font-size 2.185rem
  margin 0
  padding 32px 84px 40px

.vcard-editor-collapse
  color rgba(33, 33, 33, 0.67)
  font-size 0.75rem
  float right
  position relative
  top 10px
  cursor pointer
  span
    color #510b76
    padding-left 20px

.vcard-editor-content
  border-bottom 1px dotted #cacaca
  padding 0 84px 46px

.vcard-editor-footer
  padding 32px 84px 30px 84px

.vcard-editor-annotation
  color #BC00CB
  font-weight 300
  font-size 0.875rem
  margin 0
  padding 35px 0 0
  line-height 1.125rem
  position relative
  &:before
    content '*'
    position absolute
    left -10px
    top 35px
