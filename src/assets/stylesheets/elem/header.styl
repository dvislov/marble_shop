.header-service-panel
  height 80px
  background url(../images/header-shadow.png) center bottom no-repeat #fff
  padding 0 25px

.icon-chevron-round-left
  color #4a0082
  font-size 3rem
  position relative
  top 12px

.header-nav
  display inline-block
  vertical-align middle
  margin-left 16px

.header-nav-list
  margin 0
  padding 0
  list-style-type none

.header-nav-item
  display inline-block
  &.active
    .header-nav-link
      color #6708AF
      border-bottom 2px solid #6708AF

.header-nav-link
  display inline-block
  vertical-align top
  text-decoration none
  padding 21px 15px 25px
  color #665C6E
  font-weight 300

.header-user
  padding-top 26px
  .icon-user
    color #c2c2c2
    display inline-block
    vertical-align middle
    margin-right 10px
    position relative
    top -1px
  .icon-chevron-down
    color #8826d3
    font-size 0.3rem
    display inline-block
    vertical-align middle
    position relative
    top -1px
.header-username
  font-weight 300
  font-size 0.75rem
  display inline-block
  vertical-align middle
  margin-right 10px
  max-width 180px
  overflow hidden
  white-space nowrap
  position relative
  z-index 0
  &:after
    content ''
    display block
    height 100%
    width 20px
    position absolute
    right 0
    top 0
    background linear-gradient(transparent, #fff)


.header-logo-line
  height 70px
  background-color #fff
  padding 7px 25px 0
  font-size 0

.header-logo
  width 46px
  height 46px
  border-radius 50%
  border: 1px solid #4a0082
  text-align center
  padding 10px 0 0
  display inline-block
  margin-right 33px
  .icon-cart
    color #4a0082
    font-size 1.5rem

.header-motto
  font-weight 100
  color #6708AF
  font-size 2.6875rem
  display inline-block

.header-cart-content
  font-size 1.125rem
  font-weight 100
  display inline-block


.header-cart-status
  background #4a0082
  height 50px
  color #fff
  padding 0 25px 0 29px

.header-cart-icon
  width 38px
  height 38px
  display inline-block
  border-radius 50%
  background #fff
  text-align center
  padding-top 8px
  position relative
  top 6px
  margin 0 34px 0 0
  .icon-cart-in
    color #4a0082
    font-size 1.4rem

.header-cart-content
  position relative
  top 2px

.header-make-order-link
  color #fff
  text-decoration none
  font-weight 500
  font-size 1.125rem
  .icon-make-order
    position relative
    top 9px
    margin-left 10px
    width 32px
    height 32px
    display inline-block
    border-radius 50%
    border 1px solid #fff
    background url(../images/icon-header-make-order.png) center center no-repeat transparent
