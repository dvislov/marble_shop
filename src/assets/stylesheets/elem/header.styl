.header-service-panel
  height 80px
  background url(../images/header-shadow.png) center bottom no-repeat #fff


.header-logo-line
  height 70px
  background-color #fff
  padding 7px 25px 0
  font-size 0

.header-logo
  width 46px
  height 46px
  border-radius 50%
  border: 1px solid #4a0082
  text-align center
  padding 10px 0 0
  display inline-block
  margin-right 33px
  .icon-cart
    color #4a0082
    font-size 1.5rem

.header-motto
  font-weight 100
  color #6708AF
  font-size 2.6875rem
  display inline-block

.header-cart-content
  font-size 1.125rem
  font-weight 100
  display inline-block


.header-cart-status
  background #4a0082
  height 50px
  color #fff
  padding 0 25px 0 29px

.header-cart-icon
  width 38px
  height 38px
  display inline-block
  border-radius 50%
  background #fff
  text-align center
  padding-top 8px
  position relative
  top 6px
  margin 0 34px 0 0
  .icon-cart-in
    color #4a0082
    font-size 1.4rem

.header-cart-content
  position relative
  top 2px

.header-make-order-link
  color #fff
  text-decoration none
  font-weight 500
  font-size 1.125rem
  .icon-make-order
    position relative
    top 10px
    margin-left 10px
    width 32px
    height 32px
    display inline-block
    border-radius 50%
    border 1px solid #fff
    background url(../images/icon-header-make-order.png) center center no-repeat transparent
