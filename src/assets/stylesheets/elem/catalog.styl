.catalog
  margin-bottom 26px
  font-size 0

.catalog-row
  margin-bottom 50px
  padding-bottom 50px
  border-bottom 1px solid #dcdcdc

.catalog-item
  display inline-block
  vertical-align top
  height 350px
  width 50%
  border-right 1px solid #dcdcdc
  padding 0 74px 0 84px
  &:nth-child(even)
    border-right none
    padding 0 74px 0 80px

.catalog-image-wrap
  display table
  width 100%
  height 182px

.catalog-image
  height 182px
  text-align center
  vertical-align middle
  display table-cell
  width 100%

.catalog-item-header
  margin 0 0 13px
  height 22px
  h2
    color #090909
    font-size 1.375rem
    font-weight 300
    margin 0

.catalog-item-description
  color #2C2C2C
  font-size 0.8125rem
  line-height 1.125rem
  height 110px
  margin 0
  overflow hidden

.catalog-item-service
  height 23px

.catalog-item-price
  color #6708AF
  font-weight 500
  font-size 1.5rem

.catalog-item-price-currency
  font-variant small-caps
  padding-left 8px
