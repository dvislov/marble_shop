*
  box-sizing: border-box

body
  background-color #dcdcdc
  font-family "HelveticaNeueCyr", Helvetica, Arial, sans-serif

sticky-footer(172px)

.row
  width 982px
  margin-left auto
  margin-right auto

.content
  background-color #fff
  padding 40px 0 0
  position relative
  z-index 0
  &:after
    content ''
    display block
    width 100%
    height 10px
    background url(../images/header-shadow.png) center bottom no-repeat
    position absolute
    z-index 0
    left 0
    bottom -10px

.btn
  height 23px
  background-color #4A0082
  border 1px solid #4A0082
  border-radius 4px
  color #fff
  font-size 0.75rem
  display inline-block
  text-decoration none
  padding 5px 15px

.btn-edit
  background-color #fff
  color #4A0082
  padding-left 28px
  background url(../images/icon-edit.png) 8px 4px no-repeat
