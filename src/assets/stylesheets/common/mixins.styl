sticky-footer($height)
  html
    position relative
    min-height 100%
  body
    margin-bottom $height
  .footer
    position absolute
    left 0
    bottom 0
    height $height
    width 100%

.pull-left
  float left !important

.pull-right
  float right !important

.clearfix
  &:before,
  &:after
    content " "
    display table
  &:after
    clear both

